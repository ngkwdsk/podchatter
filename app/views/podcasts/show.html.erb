<div class="container py-4 works">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <h1 class="text-center"><%= @podcast.name %></h1>
      <div class="text-center m-4">
        <%= image_tag @podcast.image, class: "img-fluid" %>
      </div>
      
      <div>
        <p><%= @podcast.description %></p>
        <% if user_signed_in? %>
          <%= render partial: "likes/like", locals: { podcast: @podcast.original_podcast } %>
        <% end %>
      </div>
    </div>
  </div>
</div>

<% if false %>
      <div class="prototype__comments">
        <% if user_signed_in? %>
          <%= form_with(model: [ @prototype, @comment ], local: true) do |f| %>
            <div class="field">
              <%= f.label :content, "コメント" %><br />
              <%= f.text_field :content, id:"comment_content" %>
            </div>
            <div class="actions">
              <%= f.submit "送信する", class: :form__btn %>
            </div>
          <% end %>
        <% end %>
        <ul class="comments_lists">
          <% @comments.each do |comment| %>
            <li class="comments_list">
              <%= comment.content %>
              <%= link_to comment.user.name, "/users/#{@prototype.user.id}", class: :comment_user %>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
</main>
<% end %>